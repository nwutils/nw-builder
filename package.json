{
  "name": "nw-builder",
  "version": "4.1.1-beta.2",
  "description": "Build NW.js desktop applications for MacOS, Windows and Linux.",
  "keywords": [
    "NW.js",
    "node-webkit",
    "Desktop",
    "Application"
  ],
  "author": {
    "name": "Steffen MÃ¼ller",
    "url": "https://www.mllrsohn.com/"
  },
  "contributors": [
    {
      "name": "The nw-builder Authors",
      "url": "https://github.com/nwutil/nw-builder/graphs/contributors"
    }
  ],
  "license": "MIT",
  "exports": {
    "default": "./src/nwbuild.js"
  },
  "type": "module",
  "files": [
    "./src",
    "./LICENSE"
  ],
  "homepage": "https://github.com/nwutils/nw-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwutils/nw-builder.git"
  },
  "scripts": {
    "fmt": "prettier --write \"./**/*.{css,html,js,json,md,yml}\"",
    "lnt": "eslint --fix ./src",
    "doc": "jsdoc ./src/nwbuild.js -d docs",
    "doc:vite:dev": "vitepress dev docs",
    "doc:vite:bld": "",
    "e2e": "node --test-reporter=spec --test e2e/index.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "demo:esm": "cd e2e && node demo.js",
    "demo:cjs": "cd e2e && node demo.cjs",
    "demo:cli": "cd e2e && nwbuild ./app/* --mode=build --version=0.73.0 --flavor=normal --platform=win --arch=x64 --outDir=./out --cacheDir=./tmp"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "eslint-config-tjw-jsdoc": "^1.0.3",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jsdoc": "^4.0.2",
    "jsdom": "^21.1.1",
    "prettier": "^2.8.4",
    "selenium-webdriver": "^4.8.0",
    "vitepress": "^1.0.0-alpha.61"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "cli-progress": "^3.12.0",
    "decompress": "^4.2.1",
    "glob-promise": "^6.0.2",
    "plist": "^3.0.6",
    "rcedit": "^3.0.1",
    "winston": "^3.8.2",
    "yargs": "^17.7.1"
  },
  "bin": {
    "nwbuild": "./src/cli.js"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "tjw-jsdoc"
    ],
    "rules": {
      "jsdoc/require-file-overview": "off",
      "jsdoc/require-returns-description": "off",
      "jsdoc/match-description": "off",
      "jsdoc/valid-types": "off"
    }
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
